{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es2017",
        "jsx": "react",
        "paths": {
            "@client/*": ["src/client/*"],
            "@server/*": ["src/server/*"]
        }
    },

    "include": [
        "./src/**/*"
    ],

    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}